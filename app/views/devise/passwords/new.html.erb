<div class="container">
  <div class="row">
    <div class="col-md-8">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>

        <div class="input">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, placeholder:"email@address.com", class:"input-large" %>
        </div>

        <br>

        <div class="actions">
          <%= f.submit "Send me reset password instructions", class:"" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

<h2>Forgot your password?</h2>
