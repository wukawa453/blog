<%provide(:title, "All Posts") %>
<% @posts.each do |post| %>
  <div class="post_wrapper">
    <h2>
      <%= link_to post.title, post %>
    </h2>
    <p class="date">
      <span class="glyphicon glyphicon-time"></span> <%= post.created_at.strftime("Posted on %B, %d, %Y, at %I:%M %p %Z")%>
    </p>
    <%= image_tag "logo.png", class:"img-responsive", width:"900px", alt:"#{post.title}" %>

  </div>
<% end %>
